<Page x:Class="MEMORY.Settings"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:MEMORY"
	  mc:Ignorable="d"
	  Title="Settings"
      Height="500" Width="1500">
	<Border CornerRadius="20" Background="{DynamicResource PagesBackground}">
		<Grid Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<!-- громкость звуков -->
                <TextBlock FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Громкость звуков:" Margin="10"/>
				<Slider x:Name="VolumeSlider" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="0" Minimum="0" Maximum="100" Value="50" Width="500" Margin="10"/>

                <!-- громкость звуков -->
                <TextBlock FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Громкость звуков:" Margin="10"/>
                <Slider x:Name="VolumeSoundSlider" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="0" Minimum="0" Maximum="100" Value="50" Width="500" Margin="10"/>

                <!-- выбор темы -->
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Text="Тема:" Grid.Row="1" Grid.Column="0" Margin="20"/>
				<ComboBox x:Name="ThemeComboBox" Width="400" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" Margin="40" VerticalAlignment="Top" SelectionChanged="ThemeComboBox_SelectionChanged">
					<ComboBoxItem Content="Стандартная"/>
					<ComboBoxItem Content="Светлая"/>
					<ComboBoxItem Content="Темная"/>
				</ComboBox>
			</Grid>
			
			<!-- Кнопки выход и сохранить -->
			<Button Style="{DynamicResource ButtonStyle}" FontSize="20" Content="Выход" Grid.Row="1" Margin="10" Padding="10,5" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="ExitButton_Click" Width="100"/>
			<Button Style="{DynamicResource ButtonStyle}" FontSize="20" Content="Сохранить" Grid.Row="1" Margin="10"  Padding="10,5" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="ApplySettingsButton_Click" Grid.Column="1" Width="114"/>

		</Grid>

	</Border>
</Page>
