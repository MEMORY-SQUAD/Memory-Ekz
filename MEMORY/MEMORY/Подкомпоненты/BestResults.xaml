<UserControl x:Class="MEMORY.BestResults"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MEMORY"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      FontFamily="/MEMORY;component/Fonts/#Baymax">

    <Border CornerRadius="20" Width="600" Background="{DynamicResource PagesBackground}">
        <Grid Margin="50,0,50,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Style="{DynamicResource TottalTbStyle}" Text="Лучшие результаты" FontSize="40" Margin="15"/>

            <StackPanel x:Name="ResultsSP" Margin="5" Grid.Row="1"/>

        </Grid>
    </Border>
</UserControl>
