      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MEMORY"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BestResults">

    <Border CornerRadius="20" Width="500" Background="{DynamicResource PagesBackground}">
        <Grid Margin="50,0,50,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Лучшие результаты" FontSize="40" Margin="15"/>

        </Grid>
    </Border>
</Page>
