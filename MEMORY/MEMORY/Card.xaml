<UserControl x:Class="MEMORY.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MEMORY"
             mc:Ignorable="d">
    <!-- Карта -->
        <Grid x:Name="card" Width="118" Height="192.5" RenderTransformOrigin="0.5,0.5" MouseDown="Card_MouseDown">
            <!-- Трансформация для переворота -->
            <Grid.RenderTransform>
                <ScaleTransform ScaleX="1"/>
            </Grid.RenderTransform>

            <!-- Лицевая сторона карты -->
            <Border x:Name="FrontSide" Background="Blue" Visibility="Collapsed">
                <TextBlock x:Name="TBValue" Text="A♠" Foreground="White" FontSize="24"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Обратная сторона карты -->
            <Border x:Name="BackSide" Background="Red" Visibility="Visible">
                <TextBlock Text="" Foreground="#FFFFFF00"/>
            </Border>
        </Grid>
</UserControl>
