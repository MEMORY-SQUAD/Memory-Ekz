<Page x:Class="MEMORY.MainGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MEMORY"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainGame"
      FontFamily="Fonts/Baymax.otf" Background="{DynamicResource GameBackground}">
    <DockPanel>
        <Grid DockPanel.Dock="Bottom" Height="50">
            <Button Style="{DynamicResource ButtonStyle}" FontSize="20" Margin="20,0,0,0" x:Name="ExitBt" Content="Выход" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Button FontSize="20" Margin="0,0,20,0" x:Name="RetyBt" Content="Заново" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>
        <Grid DockPanel.Dock="Top" Height="50">
            
        </Grid>

        <Grid x:Name="GameGrid">

        </Grid>
    </DockPanel>
</Page>
